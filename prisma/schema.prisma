generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId   String @id @default(uuid())
  username String @unique
  password String
  role     Role @default(member)
  name String


  transactions Transaction[]
  balance Balance?
  token    String?


  @@map("users")
}

model Balance {
  balanceId   String @id @default(uuid())
  userId      String @unique
  user        User   @relation(fields: [userId], references: [userId])
  balance     Float   @default(0)

  @@map("balances")
}

model Category {
  categoryId String    @id @default(uuid())
  name       String    @unique

  products    Product[]

  @@map("categories")
}

model Product {
  productId  String    @id @default(uuid())
  name       String    @unique
  buyPrice   Int
  sellPrice  Int
  categoryId String
  category   Category @relation(fields: [categoryId], references: [categoryId], onDelete: Restrict)
  transactionItems    TransactionItem[]

  @@map("products")
}

model Transaction {
  transactionId String @id @default(uuid())
  date    DateTime  @default(now())
  user    User @relation(fields: [userId], references: [userId])
  userId  String

  transactionItem TransactionItem[]

  @@map("transactions")
}

model TransactionItem {
  transactionItemId String @id @default(uuid())
  transactionId String
  transaction Transaction @relation(fields: [transactionId], references: [transactionId])
  productId String?
  product   Product? @relation(fields:[productId], references:[productId], onDelete: SetNull)
  productName String
  weight Float
  rate Float
  total   Float @default(0)


  @@map("transaction_items")
}

enum Role {
  member
  admin
}
